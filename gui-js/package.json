{
  "name": "ku1255-fw-remapper",
  "version": "0.3.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.haborite.ku1255-fw-remapper",
    "productName": "ku1255-fw-remapper",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js"
    ],
    "asar": true,
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}
